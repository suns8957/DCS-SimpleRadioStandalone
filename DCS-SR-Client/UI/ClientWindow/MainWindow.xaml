                            <local:InputBindingControl x:Name="IntercomPTT"
                                                       Grid.Row="6"
                                                       Grid.ColumnSpan="5"
                                                       ControlInputBinding="{x:Static settings:InputBinding.IntercomPTT}"
                                                       InputName="Special Intercom Select &amp; PTT" />

                            <local:InputBindingControl x:Name="RadioOverlay"
                                                       Grid.Row="7"
