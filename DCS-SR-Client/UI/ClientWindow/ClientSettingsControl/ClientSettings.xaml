<UserControl x:Class="Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.ClientSettingsControl.ClientSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:clientSettingsControl="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.UI.ClientWindow.ClientSettingsControl"
             xmlns:p="clr-namespace:Ciribob.DCS.SimpleRadio.Standalone.Client.Properties"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <clientSettingsControl:ClientSettingsViewModel />
    </UserControl.DataContext>
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
        <StackPanel>
            <GroupBox Header="{x:Static p:Resources.GlobalSettingsHeader}">
                <StackPanel>
                    <GroupBox Header="{x:Static p:Resources.AutoConnectHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.AutoConnectEnabled}" />
                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="0"
                                Grid.Column="1"
                                ToggleValue="{Binding AutoConnectEnabled, Mode=TwoWay}" />


                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.AutoConnectPrompt}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="1"
                                Grid.Column="1"
                                ToggleValue="{Binding AutoConnectPrompt, Mode=TwoWay}" />


                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.AutoConnectMismatchPrompt}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="2"
                                Grid.Column="1"
                                ToggleValue="{Binding AutoConnectMismatchPrompt, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="{x:Static p:Resources.SRSInterfaceHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.ResetRadioOverlay}" />

                            <Button Grid.Row="0"
                                    Grid.Column="1"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Command="{Binding ResetOverlayCommand}"
                                    Content="{x:Static p:Resources.Reset}" />


                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.RadioOverlayTaskbarItem}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="1"
                                Grid.Column="1"
                                ToggleValue="{Binding RadioOverlayTaskbarItem, Mode=TwoWay}" />

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.RefocusDCS}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="2"
                                Grid.Column="1"
                                ToggleValue="{Binding RefocusDCS, Mode=TwoWay}" />

                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.Minimisetotray}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="3"
                                Grid.Column="1"
                                ToggleValue="{Binding MinimiseToTray, Mode=TwoWay}" />

                            <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.Startminimised}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="4"
                                Grid.Column="1"
                                ToggleValue="{Binding StartMinimised, Mode=TwoWay}" />

                            <Label Grid.Row="5"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.ShowTransmitterName}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="5"
                                Grid.Column="1"
                                ToggleValue="{Binding ShowTransmitterName, Mode=TwoWay}" />

                        </Grid>
                    </GroupBox>

                    <GroupBox Header="{x:Static p:Resources.MicrophoneHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.MicAGC}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="1"
                                Grid.Column="1"
                                ToggleValue="{Binding MicAGC, Mode=TwoWay}" />

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   IsEnabled="{Binding MicAGC}"
                                   ToolTip="{x:Static p:Resources.MicAGCMaxDBToolTip}"
                                   Content="{x:Static p:Resources.MicAGCMaxDB}" />
                            <StackPanel Grid.Row="2"
                                 Grid.Column="1"
                                 IsEnabled="{Binding MicAGC}">
                                <Slider
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    SmallChange="1" LargeChange="5"
                                    ToolTip="{Binding MicAGCMaxDB }"
                                    Minimum="0" Maximum="70" Value="{Binding MicAGCMaxDB, Mode=TwoWay}" />
                                <Label
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Content="{Binding MicAGCMaxDB}" />
                            </StackPanel>
                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   IsEnabled="{Binding MicAGC}"
                                   ToolTip="{x:Static p:Resources.MicAGCTargetLevelToolTip}"
                                   Content="{x:Static p:Resources.MicAGCTargetLevel}" />
                            <Slider Grid.Row="3"
                                   Grid.Column="1"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 ToolTip="{Binding MicAGCTarget }"
                                 Minimum="1000" Maximum="30000"
                                 SmallChange="100" LargeChange="1000"
                                 Value="{Binding MicAGCTarget, Mode=TwoWay}" />

                            <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.MicDenoise}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="4"
                                Grid.Column="1"
                                ToggleValue="{Binding MicDenoise, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="{x:Static p:Resources.IncomingAudioHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>

                            <Label Grid.Row="1"
                                    Grid.Column="0"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Content="{x:Static p:Resources.IncomingAudioAGC}" /> 

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="1"
                                Grid.Column="1"
                                ToggleValue="{Binding IncomingAudioAGC, Mode=TwoWay}" />

                            <Label Grid.Row="2"
                                 Grid.Column="0"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 IsEnabled="{Binding IncomingAudioAGC}"
                                 ToolTip="{x:Static p:Resources.IncomingAudioAGCMaxDBToolTip}"
                                 Content="{x:Static p:Resources.IncomingAudioAGCMaxDB}" />
                            <StackPanel Grid.Row="2"
                                        Grid.Column="1"
                                        IsEnabled="{Binding IncomingAudioAGC}">
                                <Slider
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        SmallChange="1" LargeChange="5"
                                        ToolTip="{Binding IncomingAudioAGCMaxDB }"
                                        Minimum="0" Maximum="70" Value="{Binding IncomingAudioAGCMaxDB, Mode=TwoWay}" />
                                <Label
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="{Binding IncomingAudioAGCMaxDB}" />
                            </StackPanel>
                            <Label Grid.Row="3"
                                    Grid.Column="0"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    IsEnabled="{Binding IncomingAudioAGC}"
                                    ToolTip="{x:Static p:Resources.IncomingAudioAGCTargetLevelToolTip}"
                                    Content="{x:Static p:Resources.IncomingAudioAGCTargetLevel}" />
                            <Slider Grid.Row="3"
                                    Grid.Column="1"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    ToolTip="{Binding IncomingAudioAGCTarget }"
                                    Minimum="1000" Maximum="30000"
                                    SmallChange="100" LargeChange="1000"
                                    Value="{Binding IncomingAudioAGCTarget, Mode=TwoWay}" />

                            <Label Grid.Row="4"
                                    Grid.Column="0"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Content="{x:Static p:Resources.IncomingAudioDenoise}" />

                            <clientSettingsControl:SettingsToggleControl
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    ToggleValue="{Binding IncomingAudioDenoise, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="{x:Static p:Resources.VOXHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.VOXEnabled}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="0"
                                Grid.Column="1"
                                ToggleValue="{Binding VOXEnabled, Mode=TwoWay}" />

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.VOXMinimimumTXTime}" />

                            <StackPanel Grid.Row="1"
                                        Grid.Column="1" Margin="10">

                                <Slider x:Name="VOXMinimimumTXTime"
                                        TickPlacement="BottomRight"
                                        SmallChange="100"
                                        LargeChange="200"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="100"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Maximum="2000"
                                        Value="{Binding VOXMinimimumTXTime, Mode=TwoWay}"
                                        Minimum="0"
                                        IsEnabled="True" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" FontSize="10"
                                           Content="{x:Static p:Resources.VOXMinimimumTXTime0}"
                                           HorizontalAlignment="Left" />
                                    <Label Grid.Column="1" FontSize="10"
                                           Content="{x:Static p:Resources.VOXMinimimumTXTime1000}"
                                           HorizontalAlignment="Center" />
                                    <Label Grid.Column="2" FontSize="10"
                                           Content="{x:Static p:Resources.VOXMinimimumTXTime2000}"
                                           HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.VOXMode}" />

                            <StackPanel Grid.Row="2"
                                        Grid.Column="1" Margin="10">

                                <Slider x:Name="VOXMode"
                                        TickPlacement="BottomRight"
                                        SmallChange="1"
                                        LargeChange="1"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="1"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Maximum="3"
                                        Value="{Binding VOXMode, Mode=TwoWay}"
                                        Minimum="0"
                                        ToolTip="{x:Static p:Resources.ToolTipVOXSensitivity}"
                                        IsEnabled="True" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" FontSize="10" Content="{x:Static p:Resources.VOXModeHigher}"
                                           HorizontalAlignment="Left" />
                                    <Label Grid.Column="3" FontSize="10" Content="{x:Static p:Resources.VOXModeLower}"
                                           HorizontalAlignment="Right" />
                                </Grid>

                            </StackPanel>

                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.VOXMinimumRMS}" />

                            <StackPanel Grid.Row="3"
                                        Grid.Column="1" Margin="10">

                                <Slider x:Name="VOXMinimumRMS"
                                        TickPlacement="BottomRight"
                                        SmallChange="2"
                                        LargeChange="4"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="4"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Maximum="0"
                                        Value="{Binding VOXMinimumRMS, Mode=TwoWay}"
                                        Minimum="-96"
                                        IsEnabled="True" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" FontSize="10"
                                           Content="{x:Static p:Resources.VOXMinimumRMSLower}"
                                           HorizontalAlignment="Left" />
                                    <Label Grid.Column="2" FontSize="10"
                                           Content="{x:Static p:Resources.VOXMinimumRMSHigher}"
                                           HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>

                        </Grid>
                    </GroupBox>

                    <GroupBox Header="{x:Static p:Resources.RecordingHeader}" Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.AllowTransmissionsRecord}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="0"
                                Grid.Column="1"
                                ToggleValue="{Binding AllowTransmissionsRecording, Mode=TwoWay}" />

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.RecordTransmissions}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="1"
                                Grid.Column="1"
                                ToggleValue="{Binding RecordTransmissions, Mode=TwoWay}" />

                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.SingleFileMixdown}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="2"
                                Grid.Column="1"
                                ToggleValue="{Binding SingleFileMixdown, Mode=TwoWay}" />
                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.RecordingFormat}" />
                            <ComboBox x:Name="RecordingFormat"
                                   Grid.Row="3"
                                   Grid.Column="1"
                                   Width="215"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   ItemsSource="{Binding RecordingFormats}"
                                   SelectedItem="{Binding SelectedRecordingFormat, Mode=TwoWay}" />     
                            <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.RecordingQuality}" />
                            <StackPanel Grid.Row="4"
                                        Grid.Column="1" Margin="10">

                                <Slider x:Name="RecordingQuality"
                                        TickPlacement="BottomRight"
                                        SmallChange="1"
                                        LargeChange="3"
                                        IsSnapToTickEnabled="True"
                                        TickFrequency="1"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Maximum="9"
                                        Value="{Binding RecordingQuality, Mode=TwoWay}"
                                        Minimum="0"
                                        IsEnabled="True"
                                        ToolTip="{x:Static p:Resources.ToolTipRecordQuality}"
                                        ToolTipService.ShowOnDisabled="True" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" FontSize="10"
                                           Content="{x:Static p:Resources.RecordingQuality0}"
                                           HorizontalAlignment="Left" />
                                    <Label Grid.Column="1" FontSize="10"
                                           Content="{x:Static p:Resources.RecordingQuality9}"
                                           HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>

                            <Label Grid.Row="5"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.DisallowedAudioTone}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="5"
                                Grid.Column="1"
                                ToggleValue="{Binding DisallowedAudioTone, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="{x:Static p:Resources.MiscellanousHeader}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>


                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.AutoSelectInputProfile}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="0"
                                Grid.Column="1"
                                ToggleValue="{Binding AutoSelectInputProfile, Mode=TwoWay}" />

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.CheckForBetaUpdates}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="1"
                                Grid.Column="1"
                                ToggleValue="{Binding CheckForBetaUpdates, Mode=TwoWay}" />


                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.SetSRSPath}" />

                            <Button Grid.Row="2"
                                    Grid.Column="1"
                                    Command="{Binding SetSRSPathCommand}"
                                    Content="{x:Static p:Resources.SetSRSPathBtn}" />

                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.RequireAdminToggle}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="3"
                                Grid.Column="1"
                                ToggleValue="{Binding RequireAdminToggle, Mode=TwoWay}" />

                            <Label Grid.Row="4"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.VAICOMTXInhibitEnabled}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="4"
                                Grid.Column="1"
                                ToggleValue="{Binding VAICOMTXInhibitEnabled, Mode=TwoWay}" />

                            <Label Grid.Row="5"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.ExpandInputDevices}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="5"
                                Grid.Column="1"
                                ToggleValue="{Binding ExpandInputDevices, Mode=TwoWay}" />

                            <Label Grid.Row="6"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.AllowXInputController}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="6"
                                Grid.Column="1"
                                ToggleValue="{Binding AllowXInputController, Mode=TwoWay}" />

                            <Label Grid.Row="7"
                                   Grid.Column="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Content="{x:Static p:Resources.PlayConnectionSounds}" />

                            <clientSettingsControl:SettingsToggleControl
                                Grid.Row="7"
                                Grid.Column="1"
                                ToggleValue="{Binding PlayConnectionSounds, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="{x:Static p:Resources.TemplateHeader}" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />

                            </Grid.RowDefinitions>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="{x:Static p:Resources.ProfileHeader}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                    <ComboBox x:Name="ControlsProfile"
                              Width="200"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Top" Margin="5" Padding="5"
                              SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                              ItemsSource="{Binding AvailableProfiles, Mode=TwoWay}" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Margin="5" Padding="5" Content="{x:Static p:Resources.CreateProfile}"
                                Command="{Binding CreateProfileCommand}" />
                        <Button Margin="5" Padding="5" Content="{x:Static p:Resources.CopyProfile}"
                                Command="{Binding CopyProfileCommand}" />
                        <Button Margin="5" Padding="5" Content="{x:Static p:Resources.RenameProfile}"
                                Command="{Binding RenameProfileCommand}" />
                        <Button Margin="5" Padding="5" Content="{x:Static p:Resources.DeleteProfile}"
                                Command="{Binding DeleteProfileCommand}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{x:Static p:Resources.ProfileSettingsHeader}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
