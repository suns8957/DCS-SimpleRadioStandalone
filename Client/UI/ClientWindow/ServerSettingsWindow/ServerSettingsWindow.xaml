<controls:MetroWindow
    x:Class="Ciribob.FS3D.SimpleRadio.Standalone.Client.UI.ClientWindow.ServerSettingsWindow.ServerSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    Title="Server Settings"
    Width="300"
    Height="200"
    ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="Half Duplex Radios" />

        <Label Name="RealRadio"
               Grid.Row="0"
               Grid.Column="1"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="Unknown" />

        <Label Grid.Row="1"
               Grid.Column="0"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="Server Version" />

        <Label Name="ServerVersion"
               Grid.Row="1"
               Grid.Column="1"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="Unknown" />


        <Button Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="80"
                Margin="5,0,5,5"
                Click="CloseButton_OnClick"
                Content="Close" />


    </Grid>
</controls:MetroWindow>